<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back_alphabet_with_sentence">

    <TextView
        android:id="@+id/tv_alphabet"
        android:text="A"
        android:background="@drawable/alphabate_custom_backgroud"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_marginBottom="15dp"
        android:layout_height="100dp"/>

    <soup.neumorphism.NeumorphImageView
        android:id="@+id/img_alphabet_image"
        android:src="@drawable/sorborno"
        android:scaleType="fitXY"
        app:neumorph_shapeType="flat"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/tv_alphabet_sentence"
        android:text="A for Apple"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>